<%-- any content can be specified here e.g.: --%>
<%@page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<c:set var="searchValue" value="${param.txtSearchValue}"/>
<div class="container">
    <div class="table">
        <form action="DispatchServlet">
            <div class="form-group">
                <label for="txtSearchValue">Search using name</label>
                <input type="text" class="form-control" 
                       name="txtSearchValue" id="txtSearchValue" 
                       value="${param.txtSearchValue}">
            </div>
            <button type="submit" name="btnAction" 
                    value="SearchAccount" class="btn btn-default">Submit</button>
        </form>
        <c:if test="${empty requestScope.LIST_RESULT}">
            <h2>There's no records match</h2>
        </c:if>
        <c:set var="result" value="${requestScope.LIST_RESULT}"/>    
        <c:if test="${not empty result}">
            <table class="custom-table" border="1">
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Password</th>
                        <th>Last name</th>
                        <th>First Name</th>
                        <th>Birthday</th>
                        <th>Gender</th>
                        <th>Phone number</th>
                        <th>Is use</th>
                        <th>Role in the system</th>
                <c:if test="${sessionScope.USER_INFORMATION.roleInSystem == 1}">
                    <th>Actions</th>
                </c:if>
                </tr>
                </thead>
                <c:forEach var="dto" items="${result}">
                    <tbody>
                        <tr>
                            <td>${dto.account}</td>
                            <td>${dto.pass}</td>
                            <td>${dto.lastName}</td>
                            <td>${dto.firstName}</td>
                            <td>${dto.birthday}</td>
                            <td>${dto.gender ? "Male" : "Female"}</td>
                            <td>${dto.phone}</td>
                            <td>${dto.use ? "Online" : "Offline"}</td>
                            <c:if test="${dto.roleInSystem == 1}">
                                <td>Administrator</td>
                            </c:if>
                            <c:if test="${dto.roleInSystem == 2}">
                                <td>Normal Manager</td>
                            </c:if>
                            <c:if test="${dto.roleInSystem > 2}">
                                <td>Customer</td>
                            </c:if>
                    <c:if test="${sessionScope.USER_INFORMATION.roleInSystem == 1}">
                        <td>
                            <c:url var="deleteUrl" value="DispatchServlet">
                                <c:param name="btnAction" value="DeleteAccount"></c:param>
                                <c:param name="account" value="${dto.account}"></c:param>
                                <c:param name="lastSearchValue" value="${searchValue}"></c:param>
                            </c:url>
                            <a href="${deleteUrl}" class="btn btn-danger">Delete</a>

                            <c:url var="updateUrl" value="DispatchServlet">
                                <c:param name="btnAction" value="LoadUpdateAccount"></c:param>
                                <c:param name="txtAccount" value="${dto.account}"></c:param>
                            </c:url>
                            <a href="${updateUrl}" class="btn btn-primary">Update</a>
                        </td>
                    </c:if>
                    </tr>
                    </tbody>                    
                </c:forEach>
            </table>
        </c:if> 
    </div>
</div> 

