<%-- any content can be specified here e.g.: --%>
<%@page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<c:set var="searchValue" value="${param.txtSearchValue}"/>
<div class="container">
    <div class="table">
        <form action="DispatchServlet">
            <div class="form-group">
                <label for="txtSearchValue">Search Category</label>
                <input type="text" class="form-control" 
                       name="txtSearchValue" id="txtSearchValue" 
                       value="${param.txtSearchValue}">
            </div>
            <button type="submit" name="btnAction" 
                    value="SearchCategory" class="btn btn-default">Submit</button>
        </form>
        <c:if test="${empty requestScope.LIST_RESULT}">
            <h2>There's no records match</h2>
        </c:if>
        <c:set var="result" value="${requestScope.LIST_RESULT}"/>    
        <c:if test="${not empty result}">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Type ID</th>
                        <th>Category name</th>
                        <th>Memo</th>
                <c:if test="${sessionScope.USER_INFORMATION.roleInSystem == 2}">
                    <th>Actions</th>
                </c:if>
                </tr>
                </thead>
                <c:forEach var="dto" items="${result}">
                    <tbody>
                        <tr>
                            <td>${dto.typeId}</td>
                            <td>${dto.categoryName}</td>
                            <td>${dto.memo}</td>
                    <c:if test="${sessionScope.USER_INFORMATION.roleInSystem == 2}">
                        <td>
                        <c:url var="deleteUrl" value="DispatchServlet">
                            <c:param name="btnAction" value="DeleteCategory"></c:param>
                            <c:param name="typeId" value="${dto.typeId}"></c:param>
                            <c:param name="lastSearchValue" value="${searchValue}"></c:param>
                        </c:url>
                        <a href="${deleteUrl}" class="btn btn-danger">Delete</a>
                            
                        <c:url var="updateUrl" value="DispatchServlet">
                            <c:param name="btnAction" value="LoadUpdateCategory"></c:param>
                            <c:param name="txtTypeId" value="${dto.typeId}"></c:param>
                        </c:url>
                        <a href="${updateUrl}" class="btn btn-primary">Update</a>
                        </td>
                    </c:if>
                    </tr>
                    </tbody>                    
                </c:forEach>
            </table>
        </c:if> 
    </div>
</div> 
